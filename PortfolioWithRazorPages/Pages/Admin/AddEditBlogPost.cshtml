@page "{id?}"
@model PortfolioWithRazorPages.Pages.Admin.AddEditBlogPostModel
@{
    ViewData["Title"] = Model.IsNewBlogPost ? "New Blog Post" : "Edit Blog Post";
}

<div asp-validation-summary="All">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="BlogPost.Title"></label>
            <input asp-for="BlogPost.Title" type="text" class="form-control" />
            <span asp-validation-for="BlogPost.Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="BlogPost.Body"></label>
            <textarea asp-for="BlogPost.Body" type="text" class="form-control"></textarea>
            <span asp-validation-for="BlogPost.Body"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="col-md-2 control-label"></label>
            <input type="file" sp-for="Image" class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            @if (!Model.IsNewBlogPost)
            {
                <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
            }
        </div>
    </form>
</div>



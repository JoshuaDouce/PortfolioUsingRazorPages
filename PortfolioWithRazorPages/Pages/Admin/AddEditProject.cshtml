@page "{id?}"
@model PortfolioWithRazorPages.Pages.Admin.AddEditProjectModel
@{
    ViewData["Title"] = Model.IsNewProject ? "New Project" : "Edit Project";
}

    <div class="container addedit-container">
        <div asp-validation-summary="All">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Project.Name"></label>
                    <input asp-for="Project.Name" type="text" class="form-control" />
                    <span asp-validation-for="Project.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Project.ShortDescription"></label>
                    <textarea asp-for="Project.ShortDescription" type="text" class="form-control"></textarea>
                    <span asp-validation-for="Project.ShortDescription"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Project.Body"></label>
                    <textarea asp-for="Project.Body" rows="8" type="text" class="form-control"></textarea>
                    <span asp-validation-for="Project.Body"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input type="file" rows="5" asp-for="Image" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    @if (!Model.IsNewProject)
                    {
                        <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
                    }
                </div>
            </form>
        </div>
    </div>



@page "{id}"
@model PortfolioWithRazorPages.Pages.BlogModel
@{
    var id = long.Parse((string)RouteData.Values["id"]);
    var blog = await BlogPostsService.FindAsync(id);

    ViewData["Title"] = blog.Title;
}

<div class="blog-detail-container">
    <img src="@blog.GetInlineImageSrc()" />
    <div class="blog-text-container">
        <p>@blog.Body</p>
        <p>@blog.CreationDate.ToLongDateString()</p>
    </div>
</div>
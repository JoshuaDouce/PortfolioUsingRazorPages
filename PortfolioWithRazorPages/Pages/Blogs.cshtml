@page
@model PortfolioWithRazorPages.Pages.BlogModel
@{
    ViewData["Title"] = "Blog";
    var blogPosts = await BlogPostsService.GetAllAsync();
}

<h1>Blog</h1>

@foreach (var post in blogPosts)
{
    <div class="container-fluid blog-container">
        <div class="row">
            <h2>@post.Title</h2>
            <img src="@post.GetInlineImageSrc()" />
            <p>@post.Body</p>
            <p>@post.CreationDate.ToLongDateString()</p>
            <div class="divider"></div>
        </div>
    </div>
}
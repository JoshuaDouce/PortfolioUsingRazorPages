@page
@model PortfolioWithRazorPages.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

@section Title{
    <h1 class="title">Contact Me</h1>
}

<!-- Icon Divider -->
<div class="divider-custom">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon">
        <i class="fas fa-star"></i>
    </div>
    <div class="divider-custom-line"></div>
</div>

<div class="container">
    <form method="post" class="contact-form">
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" type="text" class="form-control" />
            <span asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" type="text" class="form-control" />
            <span asp-validation-for="@Model.Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Message"></label>
            <textarea asp-for="@Model.Message" type="text" class="form-control" rows="7"></textarea>
            <span asp-validation-for="@Model.Message"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>
</div>
